{
    "name": "stubbles/peer",
    "type": "library",
    "homepage": "http://stubbles.net/",
    "license": "BSD-3-Clause",
    "description": "Help with socket operations.",
    "require": {
        "php": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.4",
        "mikey179/vfsStream": "^1.6",
        "bovigo/assert": "^2.0",
        "bovigo/callmap": "^3.1",
        "stubbles/values": "^8.0"
    },
    "suggest": {
        "stubbles/values": "Will automatically add http uri parsing to stubbles\\values\\Parse"
    },
    "autoload": {
        "psr-4": {
            "stubbles\\peer\\": "src/main/php"
        },
        "files": ["src/main/php/functions.php"]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "8.1.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
